<section class="card text-center">
      <div class="card-body">
        <h3 class="card-title">Login</h3>
        <form id="login">
            <div class="card-text">
            <label for="loginUsername">Username</label>
            <input type="text" placeholder="username" id="loginUsername">
            </div>
            <div class="card-text">
            <label for="loginPassword">Password</label>
            <input type="text" placeholder="password" id="loginPassword">
            </div>
          <div class="card-text">
            <label>User Type</label><br>
            <input type="radio" name="userType" id="admin" value="admin">
            <label for="admin">Admin</label>
            <input type="radio" name="userType" id="student" value="student">
            <label for="student">Student</label>
            <input type="radio" name="userType" id="faculty" value="faculty">
            <label for="faculty">Faculty</label>
          </div>
         <button>Login!</button><br>
            <a href="/signup">Signup instead</a>
        </form>
      </div>
</section>

<script src="/js/login.js"></script>


